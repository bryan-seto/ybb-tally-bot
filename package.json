{
  "name": "ybb-tally-bot",
  "version": "1.0.0",
  "description": "Private Telegram bot for managing shared expenses",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "prisma:generate": "prisma generate",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "test": "vitest run",
    "test:e2e": "vitest run src/__tests__/e2e/critical-flows.test.ts",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:reset": "tsx scripts/resetDatabase.ts",
    "db:local:up": "docker-compose up -d",
    "db:local:down": "docker-compose down",
    "db:local:init": "dotenv -e .env.local -- npx prisma db push",
    "db:local:migrate": "dotenv -e .env.local -- npx prisma migrate dev",
    "db:local:studio": "dotenv -e .env.local -- npx prisma studio",
    "db:local:reset": "dotenv -e .env.local -- tsx scripts/resetDatabase.ts",
    "dev:local": "ts-node-dev --respawn --transpile-only src/index.ts",
    "db:verify": "tsx scripts/verify-schema.ts",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "expenses",
    "tally"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^5.19.0",
    "@sentry/node": "^10.32.1",
    "@sentry/profiling-node": "^10.32.1",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.22.1",
    "node-cron": "^3.0.3",
    "quickchart-js": "^3.1.3",
    "telegraf": "^4.16.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/express": "^4.17.25",
    "@types/node": "^20.14.0",
    "@types/node-cron": "^3.0.11",
    "dotenv-cli": "^11.0.0",
    "prisma": "^5.19.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.5.0",
    "vitest": "^4.0.16",
    "vitest-mock-extended": "^3.1.0"
  }
}
